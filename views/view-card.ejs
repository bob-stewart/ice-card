<% var you = contacts.you %>
<!DOCTYPE html>
<html>
  <head>
    <% title = you.name + "'s emergency info" %>
    <% include head.ejs %>
  </head>
  <body>
    <h1><%- you.name %>'s emergency info</h1>
    <div class="card">
      <%
        var names = ["you",
            "primary",
            "alternative",
            "contingency",
            "emergency",
        ];
        for (var i=0; i<names.length; i++) {
          let key = names[i];
      %>
        <h2><%- key[0].toUpperCase() + key.substr(1) %></h2>
        <p><%- contacts[key].name %></p>
        <p><%- contacts[key].email %></p>
        <p><%- contacts[key].phone %></p>
        <p><%- contacts[key].address %></p>
      <% } %>
      <hr />
      <p>Stay safe. <a href="/">Make your own</a>.</p>
    </div>
  </body>
</html>
